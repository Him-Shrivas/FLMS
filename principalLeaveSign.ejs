<% include ./partial/header %> <% include ./partial/principalfunction%>
<div
  class="col-sm-6"
  style="    flex: 0 0 50%;
    max-width: 70%;
    margin-left: 431px;
    margin-top: -181px;
    text-align: -webkit-center;"
>
  <table
    class="content-table"
    style="margin: 50px auto;min-width:400px;width: 90%; box-shadow: 0 0 20px rgba(0,0,0,0.15);"
  >  
  <tr
      style="background-color: rgb(9, 1, 19); border-radius: 5px 5px 0 0;overflow: hidden;  color: #ffffff;text-align: left; font-weight: bold;"
    >
      <th>
        Faculty Name
      </th>
      <th>Department</th>
      <th>
        From
      </th>
      <th>To</th>
      <th>Days</th>
      <th>Status</th>
      <th></th>
    </tr>
    <%facultys.forEach(function(faculty){%> <% if(faculty.leaves.length>0){%>
    <tr>
      <th><%=faculty.name%></th>
      <th><%=faculty.department%></th>
      <%faculty.leaves.forEach(function(leave){%>
      <td><%=moment(leave.from).format('DD/MM/YYYY')%></td>
      <td><%=moment(leave.to).format('DD/MM/YYYY')%></td>
      <td><%=leave.days%></td>
      <td><%=leave.principalstatus%></td>

      <td>
        <%if(leave.principalstatus==="pending"){%>
        <a
          href="/principal/<%=principal.id%>/leave/<%=faculty.id%>/info"
          class="btn btn-block btn-success"
          >more info</a
        >
        <%}%>
      </td>
      <%})}%> <%})%>
    </tr>
  </table>
</div>

<% include ./partial/footer %>
